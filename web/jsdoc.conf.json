{
    // comments are allowed.
    // https://jsdoc.app/about-configuring-jsdoc.html
    "opts": {
        "destination": "./jsdoc.out/",
        "private": true,
        "recurse": true
    },
    "plugins": [],
    "recurseDepth": 10,
    "source": {
        "include": [ "src/" ],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    }
}
